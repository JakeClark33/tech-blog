<div class="container mdl-grid">
  {{#each posts as |post| }}
    <div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
      <div class="post_image mdl-card__title mdl-card--expand" style="background-image: url('https://picsum.photos/seed/{{ post.imageSeed }}/1200/400');">
        <h2 class="post_title mdl-card__title-text shadow-text">{{ post.title }}</h2>
      </div>
      <div class="mdl-card__supporting-text">
        {{ post.description }}
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"  href="/post/{{ post.slug }}">
          Read More
        </a>
      </div>
    </div>
  {{/each}}
</div>
