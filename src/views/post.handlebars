<div class="post container mdl-grid">
  <div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
    <div class="post_image mdl-card__title mdl-card--expand" style="background-image: url('https://picsum.photos/seed/{{ post.imageSeed }}/1200/400');">
      <h2 class="post_title mdl-card__title-text shadow-text">{{ post.title }}</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <div class="post__meta-author">{{ post.User.username }}</div>
      <div class="post__meta-date">{{ post.date }}</div>
    </div>
    <div class="mdl-card__supporting-text">
      {{{ post.content }}}
    </div>
  </div>
</div>